<div class="jumbotron">
  <h1>Welcome to Messaging App</h1>
  <% if user_signed_in? %>
  <%= link_to 'My Messages', user_messages_path(current_user), class: "btn btn-primary" %>
  <%= link_to 'Edit account', edit_user_registration_path,class: "btn btn-primary" %>
  <%= link_to 'Sign out', destroy_user_session_path, :method=>'delete',class: "btn btn-primary" %>
  <% else%>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
  <%= link_to 'Sign in', new_user_session_path, class: "btn btn-primary"%>
  <% end %>
</div>